extend ../base/base
prepend title 
    - var title = "Chi tiết sản phẩm"

block main
    main 
        .container.mt-4 
            +breakcrumb("Trang chủ", "Danh mục sản phẩm")
            section.lists-products.details-page
                .row.m-0
                    .col-lg-3.col-12.p-0.mb-4
                        .filter-nav
                            +navbar(categories, true, "Danh mục sản phẩm", 1)
                        ul.promotion-nav.mt-4.pl-0
                            li.navbar-brand.nav-item.w-100(href='#')
                                a.nav-link.p-0.text-uppercase(href="#") Sản phẩm khuyến mãii
                            - for(var i = 4; i < 8; i++)
                                li 
                                    +productSmall(products[i]) 
                    .col-lg-9.col-12.p-0.product-detail.pl-4
                        .detail.d-flex.flex-wrap
                            .product-image.col-sm-5.mb-4
                                .product-image__large
                                    img.w-100(src=products[0].image, alt="Anh san pham")
                                .product-image__small.d-flex.mt-2.justify-content-between
                                        img(src="../assets/images/product_1.jpg", alt="Anh san pham")
                                        img(src="../assets/images/product_2.jpg", alt="Anh san pham")
                                        img(src="../assets/images/product_1.jpg", alt="Anh san pham")
                                        img(src="../assets/images/product_1.jpg", alt="Anh san pham")
                                        img(src="../assets/images/product_1.jpg", alt="Anh san pham")
                            .product-info.col-sm-7
                                h4.text-uppercase.name=products[0].title
                                .rating-comment.d-flex
                                    +rating(products[0])
                                    a.pl-4.comment-link(href="#") |  Gửi bình luận của bạn
                                h5.card-title=`GNY: ${products[0].price}`
                                hr
                                h6 Thông tin sản phẩm:
                                .w-100.product-body__detail=products[0].description
                                hr
                                .d-flex.justify-content-between
                                    +select("Color: ", "- - Chọn màu - -", "Yellow")
                                    +select("Size: ", "- - Chọn size - -", "M", "L")
                                .d-flex.mt-4
                                    .number.d-flex
                                        .input-btn.mr-4
                                            input(type="number", name="1", value = "1")
                                            .control-btn 
                                                i.fas.fa-sort-up
                                                i.fas.fa-sort-down
                                        +button("Mua ngay", "yellow")
                        .detail-tabs.mt-5
                            ul#pills-tab.nav.nav-pills.font-weight-bold.justify-content-start.p-0(role='tablist')
                                li.nav-item
                                    a#pills-home-tab-large.nav-link.active(data-toggle='pill' href='#pills-home-large' role='tab' aria-controls='pills-home-large' aria-selected='true')
                                        | Thông tin sản phẩm
                                li.nav-item
                                    a#pills-profile-tab-large.nav-link(data-toggle='pill' href='#pills-profile-large' role='tab' aria-controls='pills-profile-large' aria-selected='false')
                                        | Đánh giá - Nhận xét
                                li.nav-item
                                    a#pills-contact-tab-large.nav-link(data-toggle='pill' href='#pills-contact-large' role='tab' aria-controls='pills-contact-large' aria-selected='false') 
                                        | Thẻ Tags
                            #pills-tabContent.tab-content
                                #pills-home-large.tab-pane.fade.show.active(role='tabpanel' aria-labelledby='pills-home-tab-large') 
