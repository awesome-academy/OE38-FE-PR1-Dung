extend ../base/base
prepend title 
    - var title = "Blog"

block main
    main 
        .container.mt-4 
            section.lists-products.details-page.blog-detail
                .row.m-0
                    .col-lg-3.col-12.p-0.mb-4
                        .filter-nav
                            +navbar(categories, true, "Danh mục sản phẩm", 10)
                        .filter-nav.mt-4
                            +navbar(categoriesNews, true, "Danh mục tin tức", 11)
                        .filter-nav.mt-4.galleries
                            li.navbar-brand.nav-item.w-100
                                a.nav-link.p-0.text-uppercase(href="#") Thư viện ảnh
                            .row.gallery.p-0
                                each image in galleries
                                    .col-4.p-0.image-gallery
                                        img.w-100(src=image, alt="Anh gallery")
                        .filter-nav.mt-4.tags
                            li.navbar-brand.nav-item.w-100(href='#')
                                a.nav-link.p-0.text-uppercase(href="#") Thẻ tag
                            +button("thời trang", "black")
                            +button("máy khoan", "white")
                            +button("news", "white")
                            +button("công nghiệp", "white")
                            +button("xây dựng", "white")
                            +button("phay", "white")
                            +button("máy cắt", "white")
                            +button("hóa chất", "white")
                    .col-lg-9.col-12.p-0.product-detail.pl-5
                        article.blog-detail-article
                            .news-image 
                                img.w-100(src=newsList[0].image, alt="Image news")
                            .news-content.mt-3
                                .news-title=newsList[0].title 
                                .info.d-flex.mt-3
                                    .date=newsList[0].date 
                                    .author.ml-4
                                        i.fas.fa-user.mr-2 
                                        | Đăng bởi 
                                        span.ml-1=` ${newsList[0].author}` 
                                    .comment.ml-4
                                        i.fas.fa-comments 
                                        span.ml-2=`${newsList[0].comments.length} Bình luận`
                                .content.mt-3=newsList[0].content 
                                .image-sub.mt-4
                                    img.w-100(src="../assets/images/blog_image_4.png", alt="Anh blog")
                                .content.mt-4=newsList[0].content 
                                .image-sub.mt-4
                                    img.w-100(src="../assets/images/blog_image_3.png", alt="Anh blog")
                                .content.mt-4=newsList[0].content 
                        hr
                        section.blog-footer.d-flex.justify-content-between.flex-wrap
                            .tags-footer.d-flex.mt-4
                                b TAGS:  
                                span máy khoan, măy cắt CNC, máy in 3D, công nghiệp, hàn xì, uốn ép,...
                            .social-footer.d-flex.mb-5.mt-4
                                b Chia sẻ: 
                                a(href="#") 
                                    i.fab.fa-facebook-f
                                a(href="#") 
                                    i.fab.fa-twitter
                                a(href="#") 
                                    i.fab.fa-google-plus-g
                                a(href="#") 
                                    i.fab.fa-instagram
                        hr
                        section.comment-view.mt-5
                            h6.text-uppercase Bình luận
                            +comment(comments[0], true) 
                            +comment(comments[0], false) 
                            +comment(comments[0], true) 
                        hr
                        section.comment-write
                            h6.mt-4.text-uppercase Viết bình luận của bạn
                            .d-flex.mt-5.flex-wrap.justify-content-between
                                .p-0.input-comment
                                    .label
                                        label(for="name") Họ và tên 
                                    input.w-100(type="text")
                                .p-0.input-comment.email
                                    .label
                                        label(for="name") Email
                                    input.w-100(type="text")
                            .comment-area.mt-5
                                .label
                                    label(for="name") Bình luận 
                                textarea.mb-4.w-100(name="", cols="30", rows="10") 
                                +button("Gửi bình luận", "yellow")